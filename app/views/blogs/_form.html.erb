
<body>
<div class="wrapper">
<div class="error">
<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
 <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <% end %>
</div>
<div class="bbbb">
  <%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>  
  <div class ="content">
  <div class="field">
  <%= form.label :content %>
    <%= form.text_field :content, id: :blog_content %>
  </div>

  <div class="field2">
   <%= form.label :image %>
    <%= image_tag(@blog.image.url, :size => "378x318") if @blog.image && @blog.image.url%>
    <%= form.file_field :image, id: :blog_image %>
    <%#= form.hidden_field :image, id: :blog_image %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
  </div>
<% end %>
</div>
</body>


